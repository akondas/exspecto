{
    "name": "akondas/exspecto",
    "type": "library",
    "description": "Small PHP DSL for synchronizing asynchronous operations (busy-waiting)",
    "keywords": [
        "php",
        "asynchronous",
        "busy-waiting",
        "testing",
        "quality-assurance"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Arkadiusz Kondas",
            "email": "arkadiusz.kondas@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "php-cs-fixer/shim": "^3.48",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Akondas\\Exspecto\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Akondas\\Exspecto\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "build": [
            "@check-cs",
            "@phpstan",
            "@phpunit"
        ],
        "check-cs": [
            "PHP_CS_FIXER_IGNORE_ENV=true php-cs-fixer fix --dry-run --diff"
        ],
        "fix-cs": [
            "php-cs-fixer fix"
        ],
        "phpstan": [
            "phpstan analyse src tests --level=max"
        ],
        "phpunit": [
            "phpunit"
        ]
    }
}
